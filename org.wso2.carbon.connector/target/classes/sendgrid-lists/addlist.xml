<?xml version="1.0" encoding="UTF-8"?>

<template name="addlists" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="list" description="Create a Recipient List with this name.." />
    <parameter name="name" description="Specify the column name for the name associated with email addresses.." />
    <sequence>
        <property name="uri.var.list" expression="$func:list" />
        <property name="uri.var.name" expression="$func:name" />


        <payloadFactory media-type="json">
            <format>
                {
                "list": "$1",
                "name":"$2"
                }
            </format>

            <args>
                <arg expression="get-property('uri.var.list')" />
                <arg expression="get-property('uri.var.name')" />
            </args>
        </payloadFactory>

        <script language="js">
            <![CDATA[
            var jsonPayload = mc.getPayloadJSON();
            var name = mc.getProperty('uri.var.name');

            if (name != null && name != ""){
               jsonPayload.client.name = name;
            }

            mc.setPayloadJSON(jsonPayload);
         ]]>
        </script>


        <property name="messageType" value="application/x-www-form-urlencoded" scope="axis2" />

        <call>
            <endpoint>
                <http method="add" uri-template="{uri.var.apiUrl}/lists/add.jsonlist={+uri.var.list}" />
                <!--<http method="add" uri-template="{uri.var.apiUrl}/lists/add.json?list={+uri.var.list}&amp;name={+uri.var.name}" />-->
            </endpoint>
        </call>
    </sequence>
</template>