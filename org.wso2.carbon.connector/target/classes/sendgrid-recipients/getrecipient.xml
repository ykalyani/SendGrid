<?xml version="1.0" encoding="UTF-8"?>

<template name="getrecipient" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="name" description="The name of the marketing email for which to retrieve lists." />
    <sequence>
        <property name="uri.var.name" expression="$func:name" />

        <property name="messageType" value="application/x-www-form-urlencoded" scope="axis2" />

        <call>
            <endpoint>
                <http method="get" uri-template="{uri.var.apiUrl}/recipients/get.json" />

            </endpoint>
        </call>
    </sequence>
</template>
