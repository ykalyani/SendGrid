<template name="getList" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="list" description="Check for this particular list." />
<!--    <parameter name="api_user" description="Username of the SendGrid account." />
    <parameter name="api_key" description="Password of the SendGrid account." />-->
    <sequence>

      <!--  <property name="uri.var.api_user" expression="$func:api_user" />
        <property name="uri.var.api_key" expression="$func:api_key" />-->
        <property name="uri.var.list" expression="$func:list" />

        <script language="js">
            <![CDATA[
        var jsonPayload = mc.getPayloadJSON();
        var list = mc.getProperty('uri.var.list');

        if (list != null && list != ""){
        jsonPayload.client.list = list;
        }

        mc.setPayloadJSON(jsonPayload);
        ]]>
        </script>


        <call>
            <endpoint>

                <http method="get" uri-template="{uri.var.apiUrl}/lists/get.json?api_key={uri.var.apiKey}&amp;api_user={uri.var.apiUser}&amp;list={uri.var.list}" />

            </endpoint>
        </call>

        <!-- Remove custom Headers from the API Response -->
        <header name="X-Runtime" action="remove" scope="transport" />
        <header name="ETag" action="remove" scope="transport" />
        <header name="X-UA-Compatible" action="remove" scope="transport" />
        <header name="X-Request-Id" action="remove" scope="transport" />
        <header name="X-Rack-Cache" action="remove" scope="transport" />
        <header name="X-Powered-By" action="remove" scope="transport" />

    </sequence>
</template>