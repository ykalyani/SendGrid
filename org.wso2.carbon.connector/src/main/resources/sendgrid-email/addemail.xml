<template name="addemail" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="list" description="The list which you are adding email addresses to." />
    <!--<parameter name="data" description="Specify the name, email address, and additional fields to add to the specified Recipient List." />-->
    <parameter name="email" description="Specify the name, email address, and additional fields to add to the specified Recipient List." />
    <parameter name="name" description="Specify the name, email address, and additional fields to add to the specified Recipient List." />
    <sequence>
        <property name="uri.var.list" expression="$func:list" />
        <!--<property name="uri.var.data" expression="$func:data" />-->
        <property name="uri.var.email" expression="$func:email" />
        <property name="uri.var.name" expression="$func:name" />

        <payloadFactory media-type="json">
            <format>
                {
                "list":"$1"
                "data": {
                "email": "$2",
                "name": "$3"
                }
                }
            </format>
            <args>
                <arg expression="get-property('uri.var.list')" />
                <arg expression="get-property('uri.var.email')" />
                <arg expression="get-property('uri.var.name')" />
            </args>
        </payloadFactory>

        <property name="messageType" value="application/x-www-form-urlencoded" scope="axis2" />
        <log level="full"></log>
        <call>
        <endpoint>
            <http method="add" uri-template="{uri.var.apiUrl}/lists/email/add.json" />
            <!--<http method="add" uri-template="{uri.var.apiUrl}/lists/email/add.json?list={+uri.var.list}&amp;data={+uri.var.data}" />-->
        </endpoint>
        </call>

        <!-- Remove custom Headers from the API Response -->
        <header name="X-Runtime" action="remove" scope="transport" />
        <header name="ETag" action="remove" scope="transport" />
        <header name="X-UA-Compatible" action="remove" scope="transport" />
        <header name="X-Request-Id" action="remove" scope="transport" />
        <header name="X-Rack-Cache" action="remove" scope="transport" />
        <header name="X-Powered-By" action="remove" scope="transport" />

    </sequence>
</template>
