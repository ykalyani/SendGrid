<component name="sendgrid-schedule" type="synapse/template">
    <subComponents>
        <component name="addSchedule">
            <file>addSchedule.xml</file>
            <description>Schedule a delivery time for an existing Marketing Email.</description>
        </component>

        <component name="getSchedule">
            <file>getSchedule.xml</file>
            <description>Retrieve the scheduled delivery time for an existing Marketing Email.</description>
        </component>

        <component name="deleteSchedule">
            <file>deleteSchedule.xml</file>
            <description>Cancel a scheduled send for a Marketing Email.</description>
        </component>

    </subComponents>
</component>