<component name="sendgrid-category" type="synapse/template">
<subComponents>
    <component name="createCategory">
        <file>createCategory.xml</file>
        <description>Create a new Category.</description>
    </component>

    <component name="addCategory">
        <file>addCategory.xml</file>
        <description>Assign a Category to an existing Marketing Email.</description>
    </component>

    <component name="removeCategory">
        <file>removeCategory.xml</file>
        <description>Remove specific categories, or all categories from a Marketing Email.</description>
    </component>

    <component name="listCategory">
        <file>listCategory.xml</file>
        <description>List all categories.</description>
    </component>

</subComponents>
</component>