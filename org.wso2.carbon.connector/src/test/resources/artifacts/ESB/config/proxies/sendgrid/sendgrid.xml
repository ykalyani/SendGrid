<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse" name="sendgrid" transports="https,http" statistics="disable" trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <property name="apiUrl" expression="json-eval($.apiUrl)" />
            <property name="api_user" expression="json-eval($.api_user)" />
            <property name="api_key" expression="json-eval($.api_key)" />
            <property name="list" expression="json-eval($.list)" />
            <property name="newlist" expression="json-eval($.newlist)" />
            <property name="data" expression="json-eval($.data)" />
            <property name="email" expression="json-eval($.email)" />
            <property name="unsubscribed" expression="json-eval($.unsubscribed)" />


            <sendgrid.init>
                <apiUrl>{$ctx:apiUrl}</apiUrl>
                <api_user>{$ctx:api_user}</api_user>
                <api_key>{$ctx:api_key}</api_key>
            </sendgrid.init>

            <switch source="get-property('transport','Action')">
                <case regex="urn:addemail">
                    <sendgrid.addemail>
                        <list>{$ctx:list}</list>
                        <data>{$ctx:data}</data>
                    </sendgrid.addemail>
                </case>

                <case regex="urn:getemail">
                    <sendgrid.getemail>
                        <list>{$ctx:list}</list>
                        <email>{$ctx:email}</email>
                        <unsubscribed>{$ctx:unsubscribed}</unsubscribed>
                    </sendgrid.getemail>
                </case>

                <case regex="urn:deleteemail">
                    <sendgrid.deleteemail>
                        <list>{$ctx:list}</list>
                        <email>{$ctx:email}</email>
                    </sendgrid.deleteemail>
                </case>

                <case regex="urn:countemail">
                    <sendgrid.countemail>
                        <list>{$ctx:list}</list>
                    </sendgrid.countemail>
                </case>

                <case regex="urn:addlist">
                    <sendgrid.addlist>
                        <list>{$ctx:list}</list>
                        <name>{$ctx:name}</name>
                    </sendgrid.addlist>
                </case>

                <case regex="urn:getlist">
                    <sendgrid.getlist>
                        <list>{$ctx:list}</list>
                    </sendgrid.getlist>
                </case>

                <case regex="urn:deletelist">
                    <sendgrid.deletelist>
                        <list>{$ctx:list}</list>
                    </sendgrid.deletelist>
                </case>

                <case regex="urn:editlist">
                    <sendgrid.editlist>
                        <list>{$ctx:list}</list>
                        <newlist>{$ctx:newlist}</newlist>
                    </sendgrid.editlist>
                </case>

            </switch>

            <respond />
        </inSequence>
        <outSequence>
            <log />
            <send />
        </outSequence>
    </target>
    <description />
</proxy>
                                
